@if (variable-exists(breakpoints)) {
  @each $bp in $breakpoints {
    $name: nth($bp, 1);
    $width: nth($bp, 2);

    @include mq($width) {
      @include inuit-widths(
        $width-fractions,
        #{$inuit-widths-breakpoint-separator}#{$name}
      );
    }
  }
}

