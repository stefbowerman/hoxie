//magnific popup responsive fix
.mfp-hide {
	&.collection-sidebar {
		display: block;
	}
}
@include mq-max($desk) {
	.collection-sidebar {
		display: none;
	}
	.mfp-wrap {
		.collection-sidebar {
			display: block;
		}
	}
	.mfp-hide {
		&.collection-sidebar {
			display: none;
		}
	}
