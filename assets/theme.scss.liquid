   ========================================================================== */

[type="text"],
[type="password"],
[type="datetime"],
[type="datetime-local"],
[type="date"],
[type="month"],
[type="time"],
[type="week"],
[type="number"],
[type="email"],
[type="url"],
[type="search"],
[type="tel"],
[type="color"],
select,
textarea {
    display: block;
    border-radius: 0;
    height: 48px;
    line-height: 22px;
    padding: 12px;
    color: $color--text;
    vertical-align: middle;
    border: 1px solid $color--grey-lighter;
    width: 100%;
    margin-bottom: 12px;
    cursor: pointer;

    font-family: $font--body;
    font-weight: $font--body-weight;
    font-style: $font--body-style;

    @include transition($global-transition);
    @include appearance(none);

    &::-webkit-input-placeholder,
    &::-moz-placeholder,
    &:-ms-input-placeholder,
    &:-moz-placeholder,
    &:placeholder {
        color: $color--grey;
    }
    
    &:focus,
    &:active {
        color: $color--text;
    }

    // error notification
    &.error,
    &.is-invalid,
    &.input--error {
        border-color: $color--alert-red;
        outline-color: $color--alert-red;
