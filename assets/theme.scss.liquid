/* ==========================================================================
   #JS FUNCTIONS HELPER
   ========================================================================== */

.js-toggle-target {
    opacity: 0;
    visibility: hidden;
    @include transform(translateY(-5px));
    @include transition(all .2s ease-out);
    &.js-active {        
        opacity: 1;
        visibility: visible;
        @include transform(translateY(0));
    }
}

.js-icon-replace {
	.icon {
		display: inline-block;
		@include transition(0.5s all ease);
	}
	.icon--master {
		opacity: 1;
		visibility: visible;
	}
	.icon--replace {
		position: absolute;
		left: 0;
		top: 0;
		opacity: 0;
		visibility: hidden;
		@include transform(scale(0.6));
	}
	&.js-active {
		.icon--master {
			opacity: 0;
			visibility: hidden;
			@include transform(scale(0.8));
		}
		.icon--replace {
			opacity: 1;
			visibility: visible;
			@include transform(scale(1));
		}
	}
}
