/* ==========================================================================
   #FAQs PAGE
   ========================================================================== */
.page--faq.page--faq {
	position: static;
}

.faq__categories {
	position: absolute;
	margin-left: -200px;
    width: 180px;
    padding-top: 6px;
}
.faq__categories-title {
    margin-bottom: 6px;
}
.faq__categories-item {
    position: relative;
    margin: 0 0 3px;
}
.faq__categories-link {
    display: block;
}
@media screen and (max-width: 1120px) {
	.faq__categories {
		display: none;
	}
}

.faq__search {
	margin: 36px 0;
	position: relative;
}
.faq__search-input {
	padding: 12px 30px 12px 12px;
    width: 100%;
    height: 54px;
    line-height: 32px;
    font-weight: 200;
    margin: 0;
    font-size: 1.2rem;
    outline: none;
}
.faq__search .icon {
	position: absolute;
    height: 54px;
    line-height: 52px;
    font-size: 22px;
    padding: 0 12px;
    top: 0;
    right: 0;
	background: $color--white;
    border: 1px solid $color--grey-lighter;
    border-left: 0;
}

.faq__category {
	margin-top: 42px;
	border-bottom: 1px solid $color--white;
    top: 1px;
    position: relative;
}
.faq__category__title.faq__category__title {
    margin-bottom: 24px;	
}

.faq__accordion__title {
    position: relative;
    display: block;
    color: $color--black;
    &:before {
    	content: '';
    	background: $color--white;
	    position: absolute;
	    width: calc(100% + 18px);
	    height: 100%;
	    left: -9px;
	    top: 2px;
	    @include transition($global-transition);
    }
    &:hover {
    	opacity: 1;
        text-decoration: none;
        &:before {
        	background: $color--grey-lightest;
        }
    }
    &.js-active {
    	.faq__accordion__title-icon {
    		@include transform(rotate(45deg));
    	}
    }
}
.faq__accordion__title-icon {
	position: absolute;
    right: -6px;
    top: 50%;
    margin-top: -12px;
    width: 28px;
    height: 28px;
    text-align: center;
    line-height: 30px;
    font-size: 12px;
    color: $color--grey-dark;
    @include transition($global-transition);
}
.faq__accordion__title {
	padding-right: 30px;
    padding-top: 3px;
}
.faq__accordion__title-text {
    margin-bottom: 6px;
    font-size: 1.2em;
    position: relative;
}
.faq__accordion__item {
    margin-bottom: 24px;
    display: block;
    overflow: hidden;
}
.faq__accordion__item:last-child {
    margin-bottom: 0;
}
.faq__accordion__item-wrap {
    &:before {
        content: '';
        width: 30px;
        height: 3px;
        background: $color--brand;
        position: absolute;
        left: 0;
        top: -12px;
    }
    *:last-child {
    	margin-bottom: 0;
    }
}
.faq__accordion__item__image {
    margin-top: 15px;
}

//cta
.faq__cta {
    margin-top: 36px;
    overflow: hidden;
}

//autocomplete
.autocomplete-suggestions {
    background: $color--white;
    border: 1px solid $color--grey-lighter;
    border-top: 0;
}
.autocomplete-suggestion {
	padding: 3px 12px;
	cursor: pointer;
	background: $color--white;
	@include transition($global-transition);
}
.autocomplete-suggestion.autocomplete-selected {
	background: $color--grey-lightest;
}

@include mq-max($tab) {
	.faq__accordion__title-text,
	.faq__search-input {
	    font-size: 1.1em;
	}
    .faq__cta {
        margin-top: 24px;
    }
}

//fixing FAQ categories sidebar spacer issue
.faq-categories-spacer {
    display:none !important
}
.faq__categories,
.faq__categories.scroll-to-fixed-fixed.scroll-to-fixed-unfixed { 
    position:absolute !important
}
.faq__categories.scroll-to-fixed-fixed {
    position:fixed !important
}
/* ==========================================================================
   #FOOTER
   ========================================================================== */

.footer {
    background: $color--grey-darkest;
}
.footer__content {
    padding: 60px 0 18px;
}
.footer-nav {
    margin-bottom: 30px;
}
.footer-nav__title {
    color: $color--white;
    text-transform: $font--title-transform;
    margin-bottom: 12px;
}
.footer-nav__item {
    margin-bottom: 3px;
}
.footer-nav__link {
    color: rgba($color--white, .8);
    &:hover {
        color: $color--white;
        opacity: 1;
    }
}
.footer-nav__image-img {
    width: 100%;
}
.footer-nav__image-link {
    @include transition($global-transition);
    &:hover {
        opacity: 0.85;
    }
}
.footer-nav__text.footer-nav__text {
    margin-bottom: 3px;
    color: rgba($color--white, .8);
    a {
        color: rgba($color--white, .8);
        &:hover {
            color: $color--white;
            opacity: 1;
        }
    }
    &.rte {
        a { 
            color: $color--white;
            border-color: $color--white;
            &:hover {
                color: $color--white;
                opacity: 1;
            }
        }
    }
}
.footer-nav__text-link { 
    color: $color--grey;
}
.footer-nav__social-wrapper {
    margin-top: 12px;
}
.footer-nav__social-items {
    margin: 0;
}
.footer-nav__social-item {
    display: inline-block;
    margin: 3px 6px 0 0;
}
.footer-nav__social-link {
    display: table;
    width: 38px;
    height: 38px;
    font-size: 15px;
    text-align: center;
    border-radius: 50%;
    color: rgba($color--white, .8);
    border: 1px solid rgba($color--white, .8);
    @include transition($global-transition);
    &:hover {
        opacity: 1;
        color: $color--white;
        border-color: $color--white;
    }
    .icon {
        display: table-cell;
        vertical-align: middle;
    }
}

.footer-copyright {
    margin-top: 9px;
}
.footer-copyright__text {
    color: rgba($color--white, .8);
    margin: 0;
    font-size: 0.8rem;
    .footer-copyright__span {
        position: relative;
        display: block;
    }
    a {
        color: rgba($color--white, .8);
        &:hover {
            color: $color--white;
            opacity: 1;
        }
    } 
}

.footer__bottom-item {
    &:last-child {
        &:after { //removing divider
            content: none;
        }
    }
}
.footer__bottom {
    background: $color--black;
    padding: 12px 0;
    min-height: 66px;
}
.footer__currency {
    font-family: $font--title;
    position: relative;
    display: inline-block;
    vertical-align: top;
    height: 42px;
    margin-right: 24px;
    padding-right: 24px;
    &:after {
        content: '';
        width: 1px;
        height: 24px;
        background: rgba($color--white, .5);
        position: absolute;
        top: 9px;
        right: 0;
    }
}
.footer__currency-toggle {
    color: rgba($color--white, .8);
    line-height: 42px;
    span {
        font-size: 1.05rem;
        width: 32px;
        display: inline-block;
    }
    .icon {
        margin-left: 6px;
        position: relative;
        top: 1px;
        font-size: 17px;
        line-height: 0;
    }
    &:hover,
    &.js-active {
        color: $color--white;
        opacity: 1;
    }
    &.js-active {
        .icon {
            &:before {
                content: "\e915";
            }
        }
    }
}
.footer__currency-box {
    position: absolute;
    bottom: 46px;
    left: -6px;
    padding-bottom: 8px;
    opacity: 0;
    visibility: hidden;
    @include transform(translateY(10px));
    @include transition($global-transition);
    &.js-active {
        opacity: 1;
        visibility: visible;
        @include transform(translateY(0));
    }
}
.footer__currency-items {
    background: $color--white;
    padding: 2px;
    width: 138px; 
    left: 0;
    border: 1px solid $color--grey-lighter;
    display: block;
    overflow: hidden;
    @include transition($global-transition);
    &:before {
        content: '';
        position: absolute;
        bottom: 0px;
        left: 16px;
        //triangle
        height: 0;
        width: 0;
        border-top: 10px solid $color--white;
        border-left: 10px solid transparent;
        border-right: 10px solid transparent;
    }
    &:after {
        content: '';
        position: absolute;
        width: 16px;
        height: 16px;
        bottom: 3px;
        left: 18px;
        box-shadow: -1px 1px 2px -2px $color--black;
        @include transform(rotate(-45deg));
    }
}
.footer__currency-item {
    font-family: $font--body;
    font-weight: $font--body-weight;
    font-style: $font--body-style;
    font-size: 0.9rem;
    letter-spacing: 0;
    padding: 3px 12px;
    border: 1px solid $color--white;
    width: 50%;
    display: block;
    float: left;
    text-align: center;
    position: relative;
    cursor: pointer;
    color: rgba($color--text,.8);
    &:hover,
    &.selected {
        color: $color--text;
        opacity: 1;
        background: $color--grey-lightest;
    } 
}
.footer__icons {
    display: inline-block;
    
}
.footer__icons-items {
    margin: 0;
    position: relative;
}
.footer__icons-item {
    display: inline-block;
    color: rgba($color--white,.8);
    margin-right: 3px;
    height: 42px;
    vertical-align: top;
}
.footer__icons-item .payment-icon {
    width: 36px;
    height: auto;
    padding: 10px 0;
