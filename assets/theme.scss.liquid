/* ==========================================================================
   #COLLECTION
   ========================================================================== */

.collection__header-info {
	width: 50%;
	max-width: 600px;
    background: $color--white;
    padding: 24px;
    padding-left: 0;
    position: relative;
}
.collection__header-media {
	position: relative;
}
.collection--img {
	.collection__header-info {
		margin-top: -84px;
		padding-left: 24px;
	}
	.collection-sidebar {
		padding-left: 24px;
	}
}
.collection--center {
	.collection__header-info {
		text-align: center;
		margin: 0 auto;
		padding-right: 0;
	}
}
.collection--center.collection--img {
	.collection__header-info {
		padding: 24px 0;
	}
	.collection-sidebar {
		padding-left: 0;
	}
}

.collection__header-info__title.collection__header-info__title {
	margin-bottom: 24px;
}
.collection__header-info__title-text {
	@include inuit-font-size($font-size-h2, 1.8);
}

.collection-products {
	margin-top: 30px;
}

.collection-sidebar__title {
	text-transform: $font--title-transform;
	margin-bottom: 6px;
}
.collection-sidebar__title-clear {
	float: right;
	font-size: 0.85rem;
	line-height: 32px;
	text-transform: none;
}
.collection-sidebar__title-clear__link {
	color: rgba($color--text, 0.8);
}

.collection-sidebar__items {
	overflow: hidden;
	margin-bottom: 24px;
}
.collection-sidebar__item {
	position: relative;
	margin: 0 0 3px;
}
.collection-sidebar__item--active {
	font-weight: bold;
}
.collection-sidebar__link {
	width: 100%;
	display: inline-block;
	color: $color--text;
}

.collection-sidebar__section--tags {
	.collection-sidebar__item {
		float: left;
		margin: 6px 6px 0 0;
	}
	.collection-sidebar__link {
		border: 1px solid $color--grey-lighter;
		padding: 1px 12px;
		width: auto;
		font-size: 0.9rem;
		color: rgba($color--text, 0.8);
		&:hover {
			opacity: 1;
			background: $color--grey-lightest;
			text-decoration: none;
		}
	}
	.collection-sidebar__item--active {
		.collection-sidebar__link {
			border-color: $color--grey-lightest;
			background: $color--grey-lightest;
    		font-weight: initial;
    		&:hover {
    			background: $color--grey-lighter;
    		}
    		&:after {
    			content: "\e918";
			    font-family: $font--icons;
			    font-size: 10px;
			    position: relative;
			    right: 0;
			    margin-left: 9px;
			    line-height: 0;
    		}
    	}
	}
}
.collection-sidebar__head,
.collection-main__filter {
	display: none;
}

.collection-empty {
	max-width: 400px;
    text-align: center;
    margin: 80px auto 0;
}

@include mq($desk) {
	.collection-sidebar.collection-sidebar {
	    background: $color--white;
	}
}
@include mq-max($desk) {
	.collection__header-info {
		padding-left: 0;
		width: 70%;
	}
	.collection-main__filter {
		display: block;
	}
	.collection-sidebar {
		min-height: 100%;
	    width: 360px;
	    background: $color--white;
	    padding: 0;
	    -webkit-overflow-scrolling: touch;
	    overflow: hidden;
	    height: 100%;
	    position: relative;
	}
	.collection-sidebar__wrapper {
		overflow-y: scroll;
	    height: 100%;
	    padding: 66px 18px 30px;
	}
	.collection-sidebar {
	    .mfp-close.mfp-close {
	        position: absolute;
		    width: 100%;
		    height: auto;
		    left: 0;
		    top: 0;
		    text-align: left;
		    padding: 18px 12px 6px 16px;
		    opacity: 1;
			color: $color--white;
	        display: block;
	        font-size: 24px;
	        line-height: 0;
	    }
	}
	.collection-sidebar__title {
		font-size: 17px;
		color: $color--white;
	}
	.collection-sidebar__title-clear__link {
		color: rgba($color--white, 0.8);
	}
	.collection-sidebar__link {
		color: rgba($color--white, 0.8);
	}
	.collection-sidebar__section--tags {
		.collection-sidebar__link {
			color: rgba($color--white, 0.8);
			background: rgba($color--white, 0.1);
			border-color: transparent;
			&:hover {
				opacity: 1;
				color: $color--white;
				background: rgba($color--white, 0.2);
			}
		}
		.collection-sidebar__item--active {
			.collection-sidebar__link {
				color: $color--white;
				background: rgba($color--white, 0.2);
				border-color: transparent;
				&:hover {
					background: rgba($color--white, 0.3);
				}
			}
		}
	}
	.collection-sidebar--dark {
		.mfp-close.mfp-close,
	    .mobile-footer__title {
	        color: $color--black;
	    }
	    .collection-sidebar__title {
	    	color: $color--black;
	    }
	    .collection-sidebar__title-clear__link {
	    	color: rgba($color--black, 0.8);	
	    }
	    .collection-sidebar__link {
			color: rgba($color--black, 0.8);
		}
		.collection-sidebar__section--tags {
			.collection-sidebar__link {
				color: rgba($color--black, 0.8);
				background: transparent;
				border-color: rgba($color--black, 0.2);
				&:hover {
					opacity: 1;
					color: $color--black;
					background: rgba($color--black, 0.1);
				}
			}
			.collection-sidebar__item--active {
				.collection-sidebar__link {
					color: $color--black;
					background: rgba($color--black, 0.1);
					border-color: transparent;
					&:hover {
						background: rgba($color--black, 0.2);
					}
				}
			}
		}
	}
}
@include mq-max($tab) {
	.collection__header-info.collection__header-info  {
	    width: 100%;
	    padding: 0 0 3px 0;
	    margin-top: 18px;
	}
	.collection--center {
		.collection__header-info {
			margin-top: 0;
		}
	}
	.collection--center.collection--img {
		.collection__header-info {
			padding: 18px 0 6px;
		}
	}
	.collection-main__filter {
		margin-bottom: 18px;
	}
	.collection__header-info__title-text {
		@include inuit-font-size($font-size-h3, 1.8);
	}
	.collection__header-info__text.collection__header-info__text {
		margin-bottom: 18px;
	}
	.collection-empty {
		margin-top: 0;
	}
	.collection-sidebar {
	    width: 300px;
	}
