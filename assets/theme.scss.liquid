   ========================================================================== */

// zoom animations
html.sr body[data-anim-load="true"][data-anim-zoom="true"] {
	//product grid
	.product-top { 
		.product__img {
			@include transform(scale(1.15));
			@include transition(transform 1s ease-out, opacity .3s ease);
		}
		.product__img-hover {
			@include transition(transform 1s ease-out, opacity .3s ease .8s);
		}
	}
	.product-top.js-sr-loaded {
		.product__img {
			@include transform(scale(1));
		}
	}
	.product:hover {
		.product__img,
		.product__img-hover {
			@include transform(scale(1.03));
		}
	}

	//single product page
	//featured product section
	.product-single__photo__img,
	.product-featured__photo__img {
		@include transform(scale(1.15));
		@include transition(all 1.5s ease-out);
	}
	.product-single__photo__img {
		@include transition-delay(.4s);
	}
	.product-single__photo.js-sr-loaded {
		.product-single__photo__img {
			@include transform(scale(1));
		}
	}
	.product-featured__photo-wrapper.js-sr-loaded {
		.product-featured__photo__img {
			@include transform(scale(1));
		}
	}
}
//with loading animations
body[data-anim-zoom="true"] {
	//continious
	.js-sr-loaded .collection__header-img,
	.js-sr-loaded .article__featured-media__img,
	.js-sr-loaded .home-intro__bg,
	.js-sr-loaded .home-delivery__bg,
	.js-slide-active .home-carousel__bg,
	.js-slide-active .home-carousel__video-cover,
	.password-content__bg {
	    -webkit-animation: zoomin 20s ease forwards;
	    -moz-animation: zoomin 20s ease forwards;
	    animation: zoomin 20s ease forwards;
	}
	
	//hover
	.blog__img,
	.collection-list__bg,
	.home-image-grid__bg,
	.home-insta__items,
	.home-carousel--image_img {
		@include transition(transform 10s ease-out, opacity .5s ease-in);//opacity for img-lazyload addition
	}
	.blog,
	.collection-list__item,
	.home-image-grid__link,
	.home-insta-link,
	.home-carousel--image_link {
		&:hover {
			.blog__img,
			.collection-list__bg,
			.home-image-grid__bg,
			.home-insta__items,
			.home-carousel--image_img {
				@include transform(scale(1.2));
			}
		}
	}
}
// if no loading animations don't wait for element to be visible to start
body[data-anim-load="false"][data-anim-zoom="true"] {
	.js-slide-active .home-carousel__bg,
	.collection__header-img,
	.article__featured-media__img,
	.home-intro__bg,
	.home-delivery__bg,
	.password-content__bg {
	    -webkit-animation: zoomin 20s ease forwards;
	    -moz-animation: zoomin 20s ease forwards;
	    animation: zoomin 20s ease forwards;
	}
}

