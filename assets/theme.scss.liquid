/* ==========================================================================
   #LAYOUT SLIDER (extends .o-layout)
   ========================================================================== */

.layout-slider.slick-initialized {
	&.o-layout {
        margin: 0;   
    }
    .o-layout__item {
        padding: 0 9px;
        position: relative;
    }
    &.o-layout--masonry {
        height: auto !important;
        .o-layout__item {
            position: relative !important;
            left: auto !important;
            top: auto !important;
        }
    }
    .layout-slider__more {
        position: absolute;
        top: 50%;
        left: 0;
        width: 100%;
        text-align: center;
    }

	//slick slider plugin styles
    .slick-track {
        @include display(flex);
    }
    .slick-slide {
        height: auto;
    }
	.slick-dots {
		position: relative;
        bottom: 0;
        width: 100%;
        text-align: center;
        li {
            display: inline-block;
            margin: 0 6px;
            width: 9px;
            height: 9px;
            border-radius: 50%;
            background: $color--black;
            opacity: 0.3;
            @include transition($global-transition);
            &.slick-active,
            &:hover,
            &:focus {
                background: $color--brand;
                opacity: 1;
            }
            button {
                padding: 0;
                width: 9px;
                height: 9px;
                border-radius: 50%;
                &:before {
                    content: none;
                }
            }
        }
    }
}
.section--content-light
.section--content-default-light {
    .layout-slider__more-link {
        color: $color--white;
    }
    .layout-slider.slick-initialized .slick-dots li {
        background: $color--white;
        &.slick-active,
        &:hover,
        &:focus {
            background: $color--white
        }
    }
}
